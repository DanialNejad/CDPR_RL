<mujoco model="Mass">
    <option gravity="0 0 -9.81" integrator="RK4"/>

    <asset>
        <!-- Define the ribbed texture -->
        <texture name="ribbed_tex" file="images.png" />
        <!-- Define the material using the texture -->
        <material name="ribbed_mat" texture="ribbed_tex" />
    </asset>

    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 5" dir="0 0 -1"/>
        <geom type="plane" size="2 2 0.1" rgba="1 1 1 1"/>

        <body name="base" pos="0 0 3">
            <joint name="j1" type="hinge" axis="0 1 0"/>
            <geom name="b" type="cylinder" mass="1" size=".01 .01" rgba="0.8 0.2 0.1 1" material="ribbed_mat"/>
            <site name="s1" pos="0 0 0"/>
            <body name="mass" pos="-.9 0 -.9" euler="0 45 0">
                <joint name="j2" type="hinge"/>
                <geom name="g" type="sphere" mass="5" size=".1" rgba="0.8 0.2 0.1 1"/>
                <site name="s2" pos="0 0 .1"/>
            </body>
        </body>

    </worldbody>

    <tendon>
        <spatial name="tendon1" limited="true" range="0 20" damping=".1" stiffness="1">
            <site site="s1"/>
            <site site="s2"/>
        </spatial>
    </tendon>

    <actuator>
        <!-- <motor name="tendon1" tendon="tendon1" ctrlrange="-2000 2000"/> -->
        <position name="tendon1" tendon="tendon1" ctrllimited="true" ctrlrange="-20 20" kp="1000"/>
    </actuator>

    <sensor>
        <!-- <force site="s1" /> -->
        <!-- Sensor for the joint angle (theta) -->
        <jointpos joint="j1" />
        <!-- Sensor for the joint angular velocity (theta dot) -->
        <jointvel joint="j1" />
    </sensor>

</mujoco>
