<mujoco model="tendon">
    <option gravity="-9.81 0 0"/>
    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 5" dir="0 0 -1"/>
        <geom type="plane" size="2 2 0.1" rgba="1 1 1 1"/>
        <site name="s1" pos="1 1 .15"/>
        <body name="pulley" pos="0 0 0">
            <freejoint/>
            <geom name="g" type="cylinder" size="0.05 0.3" rgba="0.8 0.2 0.1 1"/>
            <site name="side1" pos="-0.5 0 .15"/>
            <body>
                <site name="s2" pos="1 -1 .15"/>
            </body>
        </body>

    </worldbody>
    <tendon>
        <spatial name="tendon1" width=".002" damping="10" stiffness="100">
            <site site="s1"/>
            <geom geom="g" sidesite="side1"/>
            <site site="s2"/>
        </spatial>
    </tendon>
    <actuator>
        <motor name="tendon1" tendon="tendon1" ctrlrange="-200 200"/>
    </actuator>
</mujoco>